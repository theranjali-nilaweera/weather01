  },
  "homepage": "https://github.com/theranjali-nilaweera/weather01#readme",
  "dependencies": {
    "express": "^4.16.4",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "nodemon": "^1.18.7",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2"
  }
}
